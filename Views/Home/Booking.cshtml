
@{
    ViewData["Title"] = "Booking";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        list-style: none;
        font-family: 'Josefin Sans', sans-serif;
    }


    body {
        background-color: #f3f5f9;
    }

    .wrapper {
        display: flex;
        position: relative;
    }

        .wrapper .sidebar {
            width: 200px;
            height: 100%;
            padding: 10px 0px;
            position: absolute;
            float: right;
            background-color: black;
        }

            .wrapper .sidebar h2 {
                color: #fff;
                text-transform: uppercase;
                text-align: center;
                margin-bottom: 30px;
            }

            .wrapper .sidebar ul li {
                padding: 20px;
                text-decoration: none
            }

                .wrapper .sidebar ul li a {
                    color: #fff;
                    text-decoration: none
                }


                .wrapper .sidebar ul li:hover {
                    background-color: #594f8d;
                    text-decoration: none
                }

                    .wrapper .sidebar ul li:hover a {
                        color: #fff;
                        text-decoration: none
                    }

        .wrapper .main_content {
            width: 100%;
            margin-left: 200px;
        }

            .wrapper .main_content .info {
                margin: 20px;
            }

            .wrapper .main_content .header {
                padding: 10px;
                background-color: rgba(108, 11, 113, 1);
                color: #fff;
            }

    img {
        float: left;
        width: 25px;
        display: inline-block;
        margin: 0px 6px 4px;
    }

    h8 {
        font-weight: bold;
        color: rgba(0, 9, 75, 0.8);
    }

    labels,
    xValues,
    yValues {
        color: rgba(0, 9, 75, 0.8);
    }


    h4,
    div {
        color: rgba(108, 11, 113, 1);
    }

    .gradient-custom-4 {
        /* fallback for old browsers */
        background: #1A237E
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(0, 9, 75, 0.8), rgba(108, 11, 113, 1)));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(0, 9, 75, 0.8), rgba(108, 11, 113, 1))
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 100%;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .container {
        padding: 2px 16px;
    }


    button {
        float: right;
        background-color: rgba(108, 11, 113, 1);
        border: none;
        padding: 1px 1px 0px;
        cursor: pointer;
    }

    .button1 {
        border: none;
    }

        .button1:hover {
            background-color: blue;
            border: none;
        }

    .popup {
        position: relative;
        cursor: pointer;
    }

        /* The actual popup */
        .popup .popuptext {
            visibility: hidden;
            width: 150px;
            background-color: #555;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            position: absolute;
            left: 50%;
            margin-left: -180px;
            margin-bottom: -100px;
        }

            /* Popup arrow */
            .popup .popuptext::after {
                position: absolute;
                top: 100%;
                left: 50%;
                border-style: solid;
                border-color: #555 transparent transparent transparent;
            }

        /* Toggle this class - hide and show the popup */
        .popup .show {
            visibility: visible;
            animation: fadeIn 1s;
        }
</style>

<script>
    function myFunction() {
        var popup = document.getElementById("myPopup");
        popup.classList.toggle("show");
    }
</script>

<div class="wrapper">
    <div class="sidebar gradient-custom-4">
        <h2>Eventful</h2>
        <ul>
            <li><img src="https://icon-library.com/images/dashboard-icon-vector/dashboard-icon-vector-2.jpg" /> <a asp-controller="Home" asp-action="AdminDashboard"> Dashboard</a></li>
            <li><img src="https://www.freeiconspng.com/thumbs/profile-icon-png/profile-icon-person-user-19.png" /> <a asp-controller="Home" asp-action="Profile"> Profile</a></li>
            <li><img src="https://img.uxwing.com/wp-content/themes/uxwing/download/seo-marketing/announcement-icon.png" /> <a asp-controller="Home" asp-action="Events"> Events</a></li>
            <li><img src="https://cdn-icons-png.flaticon.com/512/55/55281.png" /> <a asp-controller="Home" asp-action="Booking"> Bookings</a></li>
            <li><img src="https://cdn.onlinewebfonts.com/svg/img_387338.png" /> <a asp-controller="Home" asp-action="Review"> Reviews</a></li>
        </ul>
    </div>
    <div class="main_content">
        <div class="header">
            Welcome to the Admin Bookings
            <button class="rounded button button1">
                <div class="popup" onclick="myFunction()">
                    <img src="https://cdn-icons-png.flaticon.com/512/3239/3239958.png" />
                    <span class="popuptext" id="myPopup">A New Notification</span>
                </div>
            </button>
        </div>
            <div class="info">
            <h3>Bookings & Sales</h3>
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="container">
                            <p>Gross Sales</p>
                            <h4>$2439</h4>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="container">
                            <p>Online Sales</p>
                            <h4>$7830</h4>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card">
                        <div class="container">
                            <p>Registered User Tickets Sold</p>
                            <h4>3927 Tickets</h4>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="container">
                            <p>Unregistered User Tickets Sold</p>
                            <h4>2042 Tickets</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <br />
                        <div class="card">
                            <div class="container">
                                <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
                                <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
                                <script>
                                    var xValues = ["Gross", "Online"];
                                    var yValues = [24, 85];
                                    var barColors = [
                                        "#e8c3b9",
                                        "#1e7145",
                                    ];

                                    new Chart("myChart", {
                                        type: "doughnut",
                                        data: {
                                            labels: xValues,
                                            datasets: [{
                                                backgroundColor: barColors,
                                                data: yValues
                                            }]
                                        },
                                        options: {
                                            title: {
                                                display: true,
                                                text: "Eary Bird Tickets"
                                            }
                                        }
                                    });
                                </script>
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <br />
                        <div class="card">
                            <div class="container">
                                <script src="https://cdnjs.cloudf	lare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
                                <canvas id="theChart" style="width:100%;max-width:600px"></canvas>
                                <script>
                                    var xGoals = ["Event Goals", "Sold Seats"];
                                    var yGoals = [50, 78];
                                    var barColors = [
                                        "#b91d47",
                                        "#00aba9"
                                    ];

                                    new Chart("theChart", {
                                        type: "doughnut",
                                        data: {
                                            labels: xGoals,
                                            datasets: [{
                                                backgroundColor: barColors,
                                                data: yGoals
                                            }]
                                        },
                                        options: {
                                            title: {
                                                display: true,
                                                text: "Event Goals"
                                            }
                                        }
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



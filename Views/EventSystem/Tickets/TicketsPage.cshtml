@model List<event_booking.Models.Ticket>

<style>
    .ticket {
        border: 5px solid green;
        border-radius: 10px;
        margin: 10px;
        padding: 10px;
        box-shadow: 0 0 10px darkgreen;
    }

    h2, h3, h4, h5 {
        color: green;
        text-align: center;
    }

    p {
        color: darkgreen;
        text-align: center;
    }

    .btn {
        font-size: 20px;
        font-weight: bold;
    }
</style>

<h2>Tickets Available</h2>
@if (Model.Count > 0)
{
    <h3>@Model[0].Event.Name</h3>
    <h4>Venue: @Model[0].Venue.Name</h4>
}

@foreach (var ticket in Model)
{
    <div class="ticket">
        <h5>Seat: @ticket.Seat.SeatNumber</h5>
        <p>Ticket Price: @string.Format("{0:0.00}", ticket.TicketPrice)</p>
        <h5>Section: @ticket.Seat.Section.SectionName</h5>
        <a class="btn gradient-custom-3 text-green" asp-area="" asp-controller="ESTicketsPage" asp-action="Detail" asp-route-id="@ticket.TicketId">View Ticket</a>
    </div>
}
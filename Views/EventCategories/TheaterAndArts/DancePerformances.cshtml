<html>
<body>
    <section class="background-radial-gradient overflow-hidden">
        <p class="text-white">Home/Theatre and Arts/ Dance Performances</p>
        <p></p>
        <h1 style="font-size:300%; margin-left:20px;" class="row text-white  fw-bold mb-2  text-uppercase">Fashion</h1>
        <div class="container-fluid px-7">
            <div class="row gx-3">
                <div class="col-4">
                    <div class="p-3 border bg-light">
                        <center><h2 class="border-dark border-bottom">SUB CATEGORIES</h2></center>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="Index">All Events </a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="PlaysAndDrama"> Plays And Drama</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="MusicalsAndBroadway">Musicals And Broadway</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="DancePerformances">Dance Performances</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="BalletAndContemporaryDance">Ballet And Contemporary Dance</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="OperaAncClassicalPerformances">Opera And Classical Performances</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="ImprovAndSketchComedy">Improv And Sketch Comedy</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="ArtExhibitionAndGalleries">Art Exhibitions And Galleries</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="StreetPerformances">Street Performances</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="PuppetryAndMarionetteShows">Puppetry And MarionetteShows</a>
                        </div>
                        <div class="p-3 mb-2 bg-light bg-gradient text-dark border-bottom">
                            <a class="nav-link text-black" asp-area="" asp-controller="TheaterAndArts" asp-action="MultimediaAndExperimentalArts">Multimedia And Experimental Arts</a>
                        </div>
                    </div>
                </div>
                <div class="col-8">
                    <div class="p-3 border bg-light">
                        <h2 class="border-dark border-bottom">ALL EVENTS</h2>
                        <p></p>
                        @foreach (var item in Model)
                        {
                            <div class="row mb-3 border border-dark">
                                <div class="col-md-2">
                                    <img style="margin-top:4px;" src="@item.Image" alt="Event image" width="100" height="80%" />
                                </div>
                                <div class="col-md-1">
                                    <h5 style="margin-top: 25px;">@item.StartDateTime.ToString("dd/MM")</h5>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">@item.Name</h6>
                                    <h6> @item.Organizer.Name</h6>
                                    <h6 class="text-muted"> @item.EventCategory.CategoryName</h6>
                                </div>
                                <div class="col-md-3">
                                    <p></p>
                                    <a class="btn gradient-custom-3 text-white" asp-area="" asp-controller="ESEventsPage" asp-action="EventsPage" asp-route-id="@item.EventId">View Event ></a>
                                    <p></p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
    </section>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - event_booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/event_booking.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">event_booking</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Promoter"))
                            {
                                <a class="nav-link text-dark" href="/CoreAdmin">Promoter Area</a>
                            }

                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        a {
            text-decoration: none;
        }
    </style>
    <footer class="bg-dark text-center text-lg-start text-white" style="margin-bottom: -100px">
        <!-- Grid container -->
        <div class="container p-4">
            <!--Grid row-->
            <div class="row my-4">
                <!--Grid column-->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">

                    <div class="rounded-circle bg-white shadow-1-strong d-flex align-items-center justify-content-center mb-4 mx-auto" style="width: 150px; height: 150px;">
                        <img src="https://www.baxterscatering.co.nz/wp-content/uploads/2015/10/Event-Catering.png" height="120"
                             loading="lazy" />
                    </div>

                    <p class="text-center">
                        Eventful is the business
                        to be with to find exclusive events all with a reasonable price.
                    </p>

                    <ul class="list-unstyled d-flex flex-row justify-content-center">
                        <li>
                            <a class="text-white px-2" href="https://www.facebook.com/">
                                <i class="fab fa-facebook-square"></i>
                            </a>
                        </li>
                        <li>
                            <a class="text-white px-2" href="https://www.instagram.com/">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>
                        <li>
                            <a class="text-white ps-2" href="https://twitter.com/">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a class="text-white ps-2" href="https://www.linkedin.com/">
                                <i class="fab fa-linkedin"></i>
                            </a>
                        </li>
                    </ul>

                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Events</h5>

                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#!" class="text-white">Performance & Nightlife</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Theater & Arts</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Sports & Outdoors</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Festivals & Lifestyle</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Professional Events & Government</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Charity & Causes</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Comedy</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Family & Education</a>
                        </li>
                    </ul>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">General</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#!" class="text-white">Your Account</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">View your tickets</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Refund or Exchange your tickets</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Terms and Conditions</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Create and event</a>
                        </li>
                        <li class="mb-2">
                            <a href="#!" class="text-white">Contact</a>
                        </li>
                    </ul>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Contact</h5>

                    <ul class="list-unstyled">
                        <li>
                            <p><i class="fas fa-map-marker-alt pe-2"></i>Warsaw, 57 Street, Poland</p>
                        </li>
                        <li>
                            <p><i class="fas fa-phone-alt pe-2"></i>+ 01 234 567 89</p>
                        </li>
                        <li>
                            <p><i class="fas fa-envelope pe-2 mb-0"></i>contact@example.com</p>
                        </li>
                    </ul>
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
            © 2023 Copyright:
            <a class="text-white" href="https://eventfulnz.com/">Eventful.com</a>
            <br>
            <br>
            <i style='font-size:30px' class='fab fa-cc-mastercard'></i>
            <i style='font-size:30px' class='fab fa-cc-stripe'></i>
            <i style='font-size:30px' class='fab fa-cc-visa'></i>
            <i style='font-size:30px' class='fab fa-cc-paypal'></i>
        </div>
        <!-- Copyright -->
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

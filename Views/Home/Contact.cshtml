    ViewData["Title"] = "Contact";
}
<div class="text-center">
    <h1 class="display-4">Get in touch</h1>
</div>
<br>
<br>
<div class="row text-center">
    <div class="col">
        <img src="https://static.vecteezy.com/system/resources/previews/000/552/683/original/geo-location-pin-vector-icon.jpg" width="100">
        <h2>Address</h2>
        <h6>Auckland Branch</h6>
        <p>Address for the Auckland Branch</p>
        <h6>Wellington Branch</h6>
        <p>Address for the Wellington Branch</p>
        <h6>Christchurch Branch</h6>
        <p>Address for the Christchurch Branch</p>
    </div>
    <div class="col">
        <img src="https://creazilla-store.fra1.digitaloceanspaces.com/cliparts/78100/phone-icon-clipart-xl.png" width="100">
        <h2>Phone</h2>
        <h6>Auckland Branch</h6>
        <p>0123456789</p>
        <h6>Wellington Branch</h6>
        <p>1234567890</p>
        <h6>Christchurch Branch</h6>
        <p>0987654321</p>
    </div>
    <div class="col">
        <img src="https://www.svgrepo.com/show/283412/mail-letter.svg" width="100">
        <h2>Email</h2>
        <h6>Book an event</h6>
        <p>bookevent@gmail.com</p>
        <h6>Report an incident</h6>
        <p>reportevent@gmail.com</p>
        <h6>Information about an event</h6>
        <p>infoevent@gmail.com</p>
    </div>
</div>
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <section>
            <h3>Message Us</h3>
            <p>Any queries about events, send us a message and we will get back to you as soon as possible
                Just enter in your contact details. As we will be using these to contact you about your query 
                about our events. We will contact you in 2 - 3 business days.
            </p>
        </section>
    </div>
    <div class="col-md-8">
        <section>
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInputGrid" placeholder="name@example.com">
                        <label for="floatingInputGrid">First Name</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInputGrid" placeholder="name@example.com">
                        <label for="floatingInputGrid">Last Name</label>
                    </div>
                </div>
            </div>
            <p></p>
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInputGrid" placeholder="name@example.com">
                        <label for="floatingInputGrid">Email</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInputGrid" placeholder="name@example.com">
                        <label for="floatingInputGrid">Phone Number</label>
                    </div>
                </div>
            </div>
            <p></p>
            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInputGrid" placeholder="name@example.com">
                <label for="floatingInputGrid">Comments</label>
            </div>
            <p></p>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
            </div>
        </section>
    </div>
</div>

 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eventfulnz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/event_booking.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark shadow-inner">
            <div class="container-fluid">
                <a class="navbar-brand nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://i.ibb.co/fYKrRZZ/jamie-Logo.png" alt="Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="PerformancesAndNightlife" asp-action="Index">Performances & Nightlife</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="TheaterAndArts" asp-action="Index">Theater & Arts</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="SportsAndOutdoors" asp-action="Index">Sports & Outdoors</a>
                        </li>
                        <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Other
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                        <li>
                                            <a class="nav-link text-white" asp-area="" asp-controller="FestivalsAndLifestyle" asp-action="Index">Festivals & Lifestyle</a>
                                        </li>
                                        <li>
                                            <a class="nav-link text-white" asp-area="" asp-controller="ProfessionalAndGovernment" asp-action="Index">Professional Events & Government</a>
                                        </li>
                                        <li>
                                            <a class="nav-link text-white" asp-area="" asp-controller="CharityAndCauses" asp-action="Index">Charity & Causes</a>
                                        </li>
                                        <li>
                                            <a class="nav-link text-white" asp-area="" asp-controller="Comedy" asp-action="Index">Comedy</a>
                                        </li>
                                        <li>
                                            <a class="nav-link text-white" asp-area="" asp-controller="FamilyAndEducation" asp-action="Index">Family & Education</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="wrapper">
    <div class="container-overflow">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>
    
    
    <footer style="margin-bottom: -70px;" class="border-top footer text-muted bg-dark">
        <div class="container">
            <div class="footer">
            <div class="row">
                <div style="margin-top: 25px;" class="col">
                    <h4>Events</h4>
                    Performance & Nightlife
                    <br>
                    Theater & Arts
                    <br>
                    Sports & Outdoors
                    <br>
                    Festivals & Lifestyle
                    <br>
                    Professional Events & Government
                    <br>
                    Charity & Causes
                    <br>
                    Comedy
                    <br>
                    Family & Education
                </div>
                    <div style="margin-top: 25px;" class="col">
                    <h4>Helpful Links</h4>
                    Your Account
                    <br>
                    View your tickets
                    <br>
                    Refund or Exchange your tickets
                </div>
                <div style="margin-top: 25px;" class="col">
                    <h4>About Us</h4>
                        <a class="text" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                    <br>
                    <a class="text" asp-area="" asp-controller="Home" asp-action="Policy">Terms and Conditions</a>
                    <br>
                        @if (User.IsInRole("Promoter"))
                        {
                            <a class="text" asp-area="" asp-controller="Home" asp-action="PromoterArea">Create Event</a>
                        }
                </div>
            </div>
            <hr>
            <center>
                <a href="https://www.facebook.com/"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b8/2021_Facebook_icon.svg/2048px-2021_Facebook_icon.svg.png" width="40"></a>
                <a href="https://twitter.com/" width="100"><img src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/twitter_circle-512.png" width="40"></a>
                <a href="https://www.linkedin.com/"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f8/LinkedIn_icon_circle.svg/800px-LinkedIn_icon_circle.svg.png" width="40"></a>
                <a href="https://www.instagram.com/"><img src="https://i0.wp.com/bodybeyondlimits.com.au/wp-content/uploads/2022/07/instagram-circle-icon-png-4.png?ssl=1" width="40"></a>
            </center>
        </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model event_booking.Models.Event

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <div class="form-group">
                <label asp-for="OrganizerId" class="control-label">Organizer</label>
                <select asp-for="OrganizerId" asp-items='new SelectList(ViewBag.Organizers, "OrganizerId", "Name")' class="form-control">
                    <option value="">Select Organizer</option>
                </select>
                <span asp-validation-for="OrganizerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventCategoryId" class="control-label">Event Category</label>
                <select asp-for="EventCategoryId" asp-items='new SelectList(ViewBag.EventCategories, "EventCategoryId", "CategoryName")' class="form-control">
                    <option value="">Select Event Category</option>
                </select>
                <span asp-validation-for="EventCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateTime" class="control-label"></label>
                <input asp-for="EndDateTime" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EarlyBirdCutoff" class="control-label"></label>
                <input asp-for="EarlyBirdCutoff" class="form-control" />
                <span asp-validation-for="EarlyBirdCutoff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenueId" class="control-label">Venue</label>
                <select asp-for="VenueId" asp-items='new SelectList(ViewBag.Venues, "VenueId", "Name")' class="form-control">
                    <option value="">Select Venue</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
